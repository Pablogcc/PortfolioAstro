<div class="bg-[#333333] min-h-screen flex justify-center items-center p-6 fondoContacto dark:bg-[#444444]">
  <div class="bg-[#B6AEAE] w-full max-w-2xl p-10 rounded-2xl shadow-lg formulario dark:bg-[#7a7a7a]">
    <h2 class="text-black text-2xl font-semibold mb-6 text-center dark:text-gray-300">Contact me</h2>
    <form class="space-y-6 ">
      <div>
        <label for="name" class="block text-black text-sm font-medium mb-2 dark:text-gray-300">Name:</label>
        <input
          type="text"
          id="name"
          class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 bg-gray-200 dark:bg-gray-600 dark:border-gray-500 dark:text-white"
        />
      </div>

      <div>
        <label for="email" class="block text-black text-sm font-medium mb-2 dark:text-gray-300">Email:</label>
        <input
          type="email"
          id="email"
          class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 bg-gray-200 dark:bg-gray-600 dark:border-gray-500 dark:text-white"
        />
      </div>

      <div>
        <label for="phone" class="block text-black text-sm font-medium mb-2 dark:text-gray-300">Phone number:</label>
        <input
          type="tel"
          id="phone"
          class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 bg-gray-200 dark:bg-gray-600 dark:border-gray-500 dark:text-white"
        />
      </div>

      <div>
        <label for="message" class="block text-black text-sm font-medium mb-2 dark:text-gray-300">Message:</label>
        <textarea
          id="message"
          rows="5"
          class="w-full p-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 bg-gray-200 dark:bg-gray-600 dark:border-gray-500 dark:text-white resize-none"
        ></textarea>
      </div>

      <div class="flex justify-center mt-6">
        <button
          type="submit"
          class="bg-[#696969] text-black px-6 py-3 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 dark:bg-[#5c5c5c] dark:hover:bg-gray-500 dark:text-white"
        >
          Send
        </button>
      </div>
    </form>
  </div>
</div>

